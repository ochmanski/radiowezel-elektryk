{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "paths": {
      "@components": ["./src/components"],
      "@styles/*": ["./src/styles/*"],
      "@images/*": ["../../assets/images/*"],
      "@helpers": ["./src/helpers"],
      "@themes": ["./src/themes"],
      "@types": ["./types"],
      "*": ["../../node_modules/*", "./node_modules/*"]
    },
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "jsx": "react"
  }
}